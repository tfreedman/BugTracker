<Window x:Class="BugTracker.OpenProject"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OpenProject" Height="115" Width="386">
    <Grid>
        <Label Content="Select the project to open:" HorizontalAlignment="Left" Margin="17,10,0,0" VerticalAlignment="Top" Width="158"/>
        <Button Content="OK" HorizontalAlignment="Left" Margin="194,47,0,0" VerticalAlignment="Top" Width="75" Click="OK_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="285,47,0,0" VerticalAlignment="Top" Width="75" Click="Cancel_Click"/>
        <ComboBox HorizontalAlignment="Left" Margin="180,10,0,0" VerticalAlignment="Top" Width="180" Name="ProjectList"/>

    </Grid>
</Window>
